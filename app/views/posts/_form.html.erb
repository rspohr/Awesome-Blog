<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset id="post_details">
    <legend>Post Details</legend>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :submit_date %><br>
      <%= f.date_select :submit_date %>
    </div>
    <div class="field">
      <%= f.label :message %><br>
      <%= f.text_area :message %>
    </div>
    <div class="field">
      <%= f.label :tag %><br>
      <%= f.text_field :tag %>
    </div>
    <div class="field">
      <%= f.label :metadata %><br>
      <%= f.text_field :metadata %>
    </div> 
  </fieldset>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
