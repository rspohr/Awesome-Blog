<h1>Listing posts</h1>
<table class="posts">
  <tr>
    <th>Title</th>
    <th>Submit date</th>
    <th>Message</th>
    <th>Tag</th>
    <th>Metadata</th>
    <th colspan="3" class="actions">Actions</th>
  </tr>
  
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.submit_date %></td>
      <td><%= post.message %></td>
      <td><%= post.tag %></td>
      <td><%= post.metadata %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, :confirm => "Are you sure?", :method => :delete %></td>
    </tr>
  <% end %>
</table>  
<br />
<%= link_to 'New Post', new_post_path %>
